<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <TextView
            android:id="@+id/tituloApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/tituloApp"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Tema"
            />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#EDEDED"
            android:gravity="center"
            android:padding="10dp"
            android:text="Data da última menstruação (DUM)"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/pink"
            android:onClick="botaoEscolherData"
            android:padding="12dp"
            android:text="Escolher Data"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/tvDiasRestantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Dias Restantes"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvSemanaAtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Semana Atual"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/ivTamanhoBebe"
            android:layout_width="wrap_content"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qualehobebe" />

        <TextView
            android:id="@+id/tvMensagemBebe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="O bebê está do tamanho de um..."
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
